<div class="panel" id="users">
    <div class="card">
        <div class="card-header">
            <div class="card-title">Gestión de Usuarios</div>
        </div>
        <div class="card-body">
            <table class="table">
                <thead>
                    <tr>
                        <th>Usuario</th>
                        <th>Correo</th>
                        <th>Rol</th>
                        <th>Estado</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (typeof usuarios !== 'undefined' && usuarios.length > 0) { %>
                        <% usuarios.forEach(function(user) { %>
                            <tr>
                                <td><%= user.nombre %> <%= user.apellido %></td>
                                <td><%= user.email %></td>
                                <td><%= user.rol_nombre || 'Sin Rol' %></td>
                                <td>
                                    <% if (user.habilitado) { %>
                                        <span class="badge badge-success">Activo</span>
                                    <% } else { %>
                                        <span class="badge badge-error">Inactivo</span>
                                    <% } %>
                                </td>
                                <td>
                                    <button class="btn btn-primary" style="padding: 0.5rem 1rem; font-size: 0.875rem;" onclick="editarUsuario('<%= user.id %>','<%= user.nombre %>','<%= user.apellido %>','<%= user.email %>','<%= user.rol_id %>','<%= user.habilitado %>')">Editar</button>
                                </td>
                            </tr>
                        <% }); %>
                    <% } else { %>
                        <tr>
                            <td colspan="5" style="text-align: center;">No hay usuarios registrados</td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
        <div class="card-footer">
            <button class="btn btn-primary">
                <i class="fas fa-plus"></i> Nuevo Usuario
            </button>
        </div>
    </div>
</div>

<!-- Modal para editar usuario -->
<div class="modal" id="modalEditarUsuario" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Editar Usuario</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close" onclick="cerrarModal()">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            
            <form id="formEditarUsuario" onsubmit="guardarCambios(event)">
                <div class="modal-body">
                    <input type="hidden" id="usuarioIdModal" name="id">
                    
                    <div class="form-group">
                        <label for="nombre">Nombre</label>
                        <input type="text" class="form-control" id="nombreModal" name="nombre" required>
                    </div>
                    
                    <div class="form-group">
                        <label for="apellido">Apellido</label>
                        <input type="text" class="form-control" id="apellidoModal" name="apellido" required>
                    </div>
                    
                    <div class="form-group">
                        <label for="email">Correo electrónico</label>
                        <input type="email" class="form-control" id="emailModal" name="email" required>
                    </div>
                    
                    <div class="form-group">
                        <label for="rol">Rol</label>
                        <select class="form-control" id="rolModal" name="rol_id" required>
                            <option value="">Seleccionar rol</option>
                            <option value="1">Admin</option>
                            <option value="2">Personal Académico</option>
                            <option value="3">Estudiante</option>
                            <% if (typeof roles !== 'undefined' && roles.length > 0) { %>
                                <% roles.forEach(function(rol) { %>
                                    <option value="<%= rol.id %>"><%= rol.nombre %></option>
                                <% }); %>
                            <% } %>
                        </select>
                    </div>
                    
                    <div class="form-group">
                        <label for="habilitado">Estado</label>
                        <select class="form-control" id="habilitadoModal" name="habilitado" required>
                            <option value="1">Activo</option>
                            <option value="0">Inactivo</option>
                        </select>
                    </div>
                    
                    <div class="form-group">
                        <label for="password">Nueva Contraseña (dejar en blanco para no cambiar)</label>
                        <input type="password" class="form-control" id="passwordModal" name="password">
                        <small class="form-text text-muted">Mínimo 6 caracteres</small>
                    </div>
                    
                    <div class="form-group">
                        <label for="confirmPassword">Confirmar Nueva Contraseña</label>
                        <input type="password" class="form-control" id="confirmPasswordModal" name="confirmPassword">
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal" onclick="cerrarModal()">Cancelar</button>
                    <button type="submit" class="btn btn-primary">Guardar Cambios</button>
                </div>
            </form>
        </div>
    </div>
</div>

